page {
  background: #f0f0f0;
}

.swiper-style {
  width: 100%;
  height: 380rpx;
}

.swiper-style swiper-item image {
  width: 100%;
}

.nav-block {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: center;
  justify-content: space-around;
  background: #fff;
  padding: 2px 0 10px;
}

.wrap-item {
  width: 33.3%;
  padding: 5rpx 0;
  text-align: center;
  position: relative;
}

.wrap_icon {
  display: block;
  margin: 20rpx auto 0;
  width: 140rpx;
  height: 140rpx;
}

.wrap-item>text {
  font-size: 14px;
  color: #4e4e4e;
}

.message-item {
  background: #fff;
  margin-top: 20rpx;
  padding: 15rpx 30rpx;
  margin-bottom: 20px;
}

.message-style {
  font-size: 16px;
  line-height: 30px;
}

.message-style>text {
  font-size: 12px;
  line-height: 30px;
  float: right;
  color: #999;
}

.message-list {
  line-height: 30px;
  color: #666;
  font-size: 14px;
}
