@import "paid_list_template/paid_list_template.wxss";
@import "shipped_list_template/shipped_list_template.wxss";
page {
  background: #f0f0f0;
}
.navbar{  
  flex: none;  
  display: flex;  
  background: #fff;  
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 40px;  
  font-size: 15px;
}  
.navbar .item.active{  
  color: #00a0e9;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #00a0e9;  
}
.order-top-view{
  border-top: 1px solid #f0f0f0;
  background: #fff;
  line-height: 76rpx;
  font-size: 13px;
  color: #757575;
  display: flex;
}
.order-top-view text{
  flex: auto;
  text-align: center;
}
.copyBtn{
  display: inline-block;
  border: 1px solid #00a0e9;
  margin-left: 8px;
  padding: 0 8px;
  font-size: 12px;
  color: #00a0e9;
  border-radius: 3px;
  height: 44rpx;
  line-height: 44rpx;
}
.copyPos{
  position: absolute;
  top:0;
  right: 15px;
}