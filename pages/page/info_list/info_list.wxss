.mess-head{
  width: 100%;
  height: 150rpx;
  background-color: #00a0e9;
  position: relative;
}
.mess-head image{
  display: block;
  margin: 0 auto;
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 3px solid #fff;
  position: absolute;
  top: 30rpx;
  left: 50%;
  margin-left: -65rpx;
  z-index: 10;
}
.base-message{
 background: #fff;
 padding: 32rpx 25rpx;
}
.base-title{
  color: #666;
  line-height: 30px;
  margin-bottom: 10rpx;
  font-size: 16px;
}
.base-item{
   font-size: 15px;
  line-height: 30px;
}
.base-item text{
  color: #666;
  display: inline-block;
  width: 180rpx;
  text-align: right;
}
.mt28{
  margin-top: 28rpx;
}
.mess-radius{
  position: absolute;
  bottom:-35px;
  left: 50%;
  width: 120%;
  height: 60px;
  background: #fff;
  border-radius: 50%;
  z-index: 0;
  margin-left: -60%;
}
