.image-container{
  width: 100%;
  overflow: hidden;
  position: relative;
}
.swiper-style {
  width: 100%;
}
.swiper-style swiper-item image {
  width: 100%;
  height: 100%;
}
.detail-info{
  padding: 4px 10px;
}
.goods-name{
  margin: 5px auto;
  font-size: 34rpx;
  line-height:60rpx;
  min-height: 80rpx;
}
.list-message{
  font-size: 32rpx;
  color: #666;
  line-height: 80rpx;
  height: 80rpx;
}
.detail-title{
  font-size: 34rpx;
  line-height: 34px;
}
.detail_box {
    padding: 0 10rpx;
}
.detail_box .detail_list .detail_item{
    margin-bottom: 0px;
}
.detail_box .detail_list image {
    width: 100%;
}

.detail_box .detail_list .title {
    font-size: 12px;
    font-weight: bold;
    text-align: center;
    color: #333;
}
.icon-edit{
  width: 44px;
  height: 44px;
  background: rgba(0, 0, 0, .4);
  border-radius: 50%;
  position: fixed;
  top: 10px;
  right: 5px;
  z-index: 1000;
}
.icon-edit image{
  width: 22px;
  height: 22px;
  margin: 0 auto;
  padding-top: 11px;
  display: block;
}