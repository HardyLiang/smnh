@import "product_list_template/product_list_template.wxss";
.product-list{
  margin-bottom: 70px;
}
.big-btn{
  margin: 10rpx 120rpx;
}
.pro-info{
  background: #fff;
  display: flex;
  display: -webkit-flex;
}
.pro-info>view{
  font-size: 24rpx;
  color: #666;
}
.pro-info-detail{
   width: 340rpx; 
}
.pro-info-dec{
  margin: 8rpx 0;
}
.pro-info-dec view {
  line-height: 58rpx;
} 
.pro-info-head{
  width: 190rpx;
  height: 190rpx;
}
.pro-info-detail text{
  display: block;
  line-height: 58rpx;
}
.pro-info-detail text:first-child{
  font-size: 32rpx;
  color: #000;
  line-height: 58rpx;
  margin-top: 8rpx;
}
.pro-info-head image{
  width: 152rpx;
  height: 152rpx;
  margin: 16rpx;
  border-radius: 50%;
}
.color-red{
  display: inline-block;
  color: #ff2b2b;
}
.pro-new{
  width: 94%;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 0 3%;
  background: #fff;
}
/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent  no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore_tips {
  display: inline-block;
  vertical-align: middle;
  color: #aaa;
}

