.pro-list-item {
  background: #fff;
  border-top: 3px solid #00a0e9;
  margin-top: 25rpx;
}

.goods-top {
  display: flex;
  padding: 20rpx;
}

.product-img {
  margin-right: 12rpx;
}

.product-img image {
  width: 185rpx;
  height: 185rpx;
}
.product-detail-info{
  font-size: 26rpx;
  color: #666;
  line-height: 46rpx;
}
.product-detail-info view:first-child{
  font-size: 32rpx;
  color: #000;
  line-height: 46rpx;
}
.pro-status{
  color: #00a0e9;
  display: inline-block;
  width: 266rpx;
}
.pro-sales{
  display: inline-block;
width: 266rpx;
}
.pro-give{
  color: #f16b00;
}
.goods-bottom{
  border-top: 1px solid #d3d3d3;
  padding: 10px 15rpx;
  overflow: hidden;
}
.pro-btn{
  float: right;
  /* border: 1px solid #777!important; */
  border-radius: 5px;
  margin: 0 10rpx;
  padding: 0 20rpx;
  background: #fff;
  color: #777;
  height: 68rpx;
  line-height: 70rpx;
  font-size: 28rpx;
}
.c-blue{
  color: #00a0e9;
}
.c-blue::after{
  content: '';
  border: 1px solid #00a0e9;
}
.c-orange{
  color: #f16b00;
}
.c-orange::after{
  content: '';
  border: 1px solid #f16b00;
}
