page {
  background: #fff;
}

.message-item {
  margin-top: 20rpx;
  padding: 0 14rpx;
}

.message-item>text {
  line-height: 30px;
  color: #999;
  text-align: center;
  font-size: 28rpx;
}

.message-item>view {
  display: flex;
  border: 1px solid #eee;
  border-radius: 3px;
}
.message-item .border-blue{
  border: 1px solid #00a0e9;
}
.message-box {
  padding: 12rpx 30rpx;
  flex: 1;
}

.message-box>view:first-child {
  width: 450rpx;
  display: block;
  font-size: 32rpx;
  line-height: 60rpx;
  height: 60rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.message-box>view:last-child {
  font-size: 28rpx;
  line-height: 46rpx;
  color: #999;
  max-height: 90rpx;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

