<template name="packageTemplate">
  <view class='package-item'>
    <view class='form-group'>
      <view class='package-title'>包裹
        <icon class='icon-small' type='cancel' bindtap="delBind"></icon>
      </view>

      <view class="input-item">
        <text class="input-item-label">物流公司</text>
        <picker class="input-item-content" bindchange="bindPickerChange" 
          value="{{index}}" range="{{logisticsList}}" range-key="{{'companyName'}}">
          <view class="picker">
            {{chooseCompanyName}}
          </view>
        </picker>
        <view class='icon-select-arrow'></view>
      </view>
      <view class="input-item">
        <text class="input-item-label">物流单号</text>
        <view class="input-item-content">
          <input type="number" placeholder="请输入物流单号"></input>
        </view>
      </view>
      <view class="input-item">
        <text class="input-item-label">产品</text>
        <view class="input-item-content" data-list="{{goodInfoList}}" data-position="{{ids}}" catchtap='chooseGoods'>
          <input type="text" placeholder="请选择产品" disabled='false' value="{{chooseValue}}"></input>
        </view>
        <view class='icon-select-arrow'></view>
      </view>
    </view>
  </view>
</template>