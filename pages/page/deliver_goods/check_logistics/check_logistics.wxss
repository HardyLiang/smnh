.navbar{  
  flex: none;  
  display: flex;  
  background: #fff;  
}  
.navbar .item{  
  position: relative;  
  flex: auto;  
  text-align: center;  
  line-height: 40px;  
  font-size: 15px;
}  
.navbar .item.active{  
  color: #00a0e9;  
}  
.navbar .item.active:after{  
  content: "";  
  display: block;  
  position: absolute;  
  bottom: 0;  
  left: 0;  
  right: 0;  
  height: 4rpx;  
  background: #00a0e9;  
}
.goods-container {
  display: flex;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  padding: 15rpx 0;
  margin: 10rpx 0;
  background: white
}

.good-img {
  width: 130rpx;
  height: 130rpx;
  margin-right: 10rpx;
}

.good-img image {
  width: 130rpx;
  height: 130rpx;
}

.good-info {
  flex: 3;
}

.good-info>text {
  display: block;
}

.item-good-name {
  font-size: 15px;
  margin-bottom: 8rpx;
}
.paid-txt2 {
  color: #757575;
  font-size: 12px;
  line-height: 14px;
}
.logistics{
  background: white;
  padding: 5px
}

.logistics_centent{ 
  display: flex; 
  flex-direction: column;
  position: absolute;  
  left: 100rpx;  
  font-size: 28rpx;  
  color: #666  
}  
.icon{  
  width: 20rpx;  
  height: 20rpx;  
  background: white;  
  border-radius: 50%;  
  display: inline-block;  
  margin:0rpx 20rpx 0rpx 40rpx;  
}  
.in{  
  border: 1rpx solid red;  
  animation: my_animation 2s infinite;  
}  
@keyframes my_animation{  
    100% {    
    transform: scale(2);    
    background-color: transparent;    
    }    
}  
.no_in{  
  border: 1rpx solid #d0d0d0;  
}  
.on{  
  background: #d0d0d0;  
  height: 100rpx;  
  width: 1px;  
  margin-left: 50rpx;  
}  
