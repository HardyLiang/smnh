<view>
  <view class='form-group'>
    <view class='res-title'>个人信息</view>
    <view class="input-item">
      <text class="input-item-label">身份证号</text>
      <view class="input-item-content">
        <input type="text" placeholder="请输入您的身份证号" value=''></input>
      </view>
    </view>
    <view class="input-item">
      <text class="input-item-label">姓名</text>
      <view class="input-item-content">
        <input type="text" placeholder="请输入您的姓名"></input>
      </view>
    </view>
    <view class="input-item">
      <text class="input-item-label">手机号码</text>
      <view class="input-item-content">
        <input type="number" placeholder="" value=''></input>
      </view>
    </view> 
    <view class="input-item">
      <text class="input-item-label">性别</text>
      <picker class="input-item-content" bindchange="bindSexChange" value="{{index}}" range="{{sex}}">
        <view class="picker">
          {{sex[index]}}
        </view>
      </picker>
    </view>
    <!-- <view class="input-item">
      <text class="input-item-label">农户类型</text>
      <picker class="input-item-content" bindchange="bindFarmerChange" value="{{Farmerindex}}" range="{{FarmerType}}">
        <view class="picker">
          {{FarmerType[Farmerindex]}}
        </view>
      </picker>
    </view> -->
  </view>
  
  <!-- 收货 -->
  <view class='form-group'>
    <view class='res-title'>收货地址</view>

    <view class="input-item">
      <text class="input-item-label">所在地区</text>
      <picker mode="region" bindchange="AddressChange" value="{{Address}}" custom-item="{{customItem}}">
        <view class="picker">
          {{Address[0]}}，{{Address[1]}}，{{Address[2]}}
        </view>
      </picker>
    </view>
    <view class="input-item">
      <text class="input-item-label">详细地址</text>
      <view class="input-item-content">
        <input type="text" placeholder="请输入详细发货地址"></input>
      </view>
    </view>
  </view>
  <!-- //收货信息 -->
  <view class='agree-box'>
    <view class="input-item-content">
      <label bindtap="">
        点击确认开店表示您已阅读并同意
        <text class='color-blue'>“实名农户平台”服务协议</text>
      </label>
    </view>
  </view>
  <button class='big-btn'>确认开店</button>
</view>