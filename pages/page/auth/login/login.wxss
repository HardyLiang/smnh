page {
  background: -webkit-linear-gradient(top, #00a7ee 0%, #00a0e9 100%);
  height: 100%;
}

.login-top {
  margin: 12px auto 18px;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  /* border: 15rpx solid rgba(255, 255, 255, 0.5); */
}

.login-top image {
  display: block;
  width: 100%;
  height: 100%;
}

.form-box {
  width: 92%;
  height: auto;
  overflow: hidden;
  padding: 0 4%;
  margin-top: 96rpx;
}

.form-item {
  position: relative;
  background: #fff;
  border-radius: 50rpx;
  height: 100rpx;
  margin-bottom: 15px;
}

.form-icon {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: 26rpx;
  left: 40rpx;
  z-index: 100;
}

.form-item .username, .form-item .password, .form-item .code {
  position: absolute;
  top: 10rpx;
  left: 100rpx;
  z-index: 100;
  min-width: 500rpx;
  display: block;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #00a7ee;
}

.form-item .clear {
  position: absolute;
  top: 26rpx;
  right: 40rpx;
  z-index: 2;
  display: block;
  height: 44rpx;
  width: 44rpx;
}

