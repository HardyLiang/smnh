.login-text {
  font-size: 30rpx;
  line-height: 80rpx;
  color: #fff;
}

.form-item-text {
  margin-top: 10px;
  height: 60rpx;
  width: 100%;
}

.form-item-text .register {
  display: block;
  height: 60rpx;
  float: left;
  font-size: 30rpx;
  color: #fff;
}

.form-item-text .reset {
  display: block;
  height: 60rpx;
  float: right;
  font-size: 32rpx;
  color: #fff;
}

.submit-btn {
  padding: 10rpx 0;
  background: #8fc320;
  color: #fff;
  margin: 20rpx 0;
  font-size: 32rpx;
  border-radius: 40px;
}
