@import "../add_product.wxss";

.upload-detail-info {
  overflow: hidden;
}

.uploadList {
  margin: 15px 0;
  padding: 10px;
  border: 1px solid #eee;
  border-radius: 3px;
  box-shadow: 1px 5px 6px #eee;
  position: relative;
}

.icon-delete-detail {
  position: absolute;
  right: 12px;
  top: 10px;
  width: 20px;
  height: 20px;
}

.upload-type-text {
  font-size: 15px;
  color: #000;
  font-weight: bold;
  line-height: 30px;
  margin-bottom: 5px;
  border-radius: 4px;
}

.upload-imgBox {
  margin-top: 10px;
  min-height: 70px;
  border-radius: 3px;
}

.weui-uploader__bd {
  margin-right: 0;
}

.detail-text {
  width: 100%;
  line-height: 26px;
  font-size: 16px;
  max-height: 80px;
  border: 1px solid #eee;
  border-radius: 3px;
}

.add-btn {
  width: 100px;
  height: 30px;
  line-height: 32px;
  color: #00a0e9;
  font-size: 13px;
  margin: 10px;
  background: #fff;
  float: left;
}

.add-btn:hover {
  background: #f5f5f5;
}

.uploadInput-box {
  width: 70px;
  height: 70px;
  border: 1px solid #eee;
  border-radius: 3px;
  line-height: 70px;
  text-align: center;
  font-size: 30px;
  color: #eee;
  position: relative;
}

.up-image-detail {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.up-pos {
  position: absolute;
  top: 12px;
  right: 80px;
}

.down-pos {
  position: absolute;
  top: 12px;
  right: 46px;
}

.up-btn {
  width: 0;
  height: 0;
  border-left: 11px solid transparent;
  border-right: 11px solid transparent;
  border-bottom: 17px solid #888;
}

.down-btn {
  width: 0;
  height: 0;
  border-left: 11px solid transparent;
  border-right: 11px solid transparent;
  border-top: 17px solid #888;
}
