@import "../../style/public.wxss";
.input-item-content label{line-height: 24px;height: 24px}
.input-item-content icon{vertical-align:top;height: 24px;}
.input-item.input-item-full textarea{
	height: 180rpx;
	border: 1rpx solid #e8e8e8;
	padding: 10rpx;
  line-height: 44rpx;
}
.input-item textarea {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 5px;
  border: 1px solid #eee;
}

.abs-right {
  position: absolute;
  top: 20rpx;
  right: 2px;
  font-size: 30rpx;
  color: #333;
}

.label-msg {
  font-size: 24rpx;
  color: #aaa;
}

.proxy-box {
  margin-top: 20rpx;
  padding: 5px 0;
}

.proxy-msg {
  font-size: 24rpx;
  color: #00a0e9;
}

.hide {
  display: none;
}

.show {
  display: block;
}

.product-info-img {
  padding: 20rpx;
  margin: 20rpx 0;
  background: #fff;
}

.image-num {
  float: right;
  color: #666;
}

.product-upload {
  margin: 10px 0;
}

.up-image-info {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.main-add-btn {
  line-height: 22px;
  font-size: 32rpx;
  color: #505050;
  padding: 0 10px;
}

.add-gg {
  vertical-align: top;
  transform: rotate(45deg);
  width: 22px;
  height: 22px;
  display: inline-block;
  margin-right: 5px;
}

.pos-re {
  position: relative;
}

.delete-box {
  width: 30px;
  height: 300rpx;
  background:#fff;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 11;
}

.delete-button {
  position: absolute;
  top: 50%;
  right: 2px;
  z-index: 12;
  width: 22px;
  height: 22px;
  margin-top: -11px;
  display: inline-block;
  border: 3px solid #fff;
  border-radius: 50%;
}

